(function () {
    'use strict';
    angular.module('greeneffect.controller.order', ['ngCordova'])

    .controller('takePhotoCtrl', function ($scope, $state, $cordovaCamera) {
            $scope.openGallery = function(){               
                $state.go('gallery');
            
            };
		$scope.imgUrl = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT4AhEoPhG5BaW_b1_CxxpiqXl-tsVTk21u2tqN2i_OrS1pN66-";
            $scope.takePhoto = function(){
                //alert ('takePhoto');
		
		var options = {
			quality : 100,
			sourceType : Camera.PictureSourceType.CAMERA,
			destinationType : Camera.DestinationType.NATIVE_URI
				
		};
		$cordovaCamera.getPicture(options)
		.then(function(data){
			$scope.imgUrl = data;
			//console.log("ImgUrl: "+$scope.imgUrl);
		}, function	(err) {
			alert('tack photo err');

	});
            }
    })
    .controller('gelleryCtrl', function($scope){
        $scope.loadGellery = function (){
           // alert('loadGellery');
           $('.galleryitem').click(function(){
            //alert('Image Click');
            $('#cbx').css({'display': 'block'});
            if($('#cbx').prop('checked') == false)
           {
                $('#cbx').prop('checked', true);
            }
            else
            {
                $('#cbx').prop('checked', false).hide();

            }
           });
        }
    })
    .controller('headerCtrl', function($scope,$state){
        $scope.back = function (page){
            $state.go(page);
        }
    })



})();

